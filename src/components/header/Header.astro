---
import LanguagePicker from '@components/header/LanguagePicker.astro'
import Logo from '@components/header/Logo.astro'
import ThemeSelector from '@components/header/ThemeSelector.astro'
---

<header>
	<section>
		<Logo/>
	</section>
	<section>
		<ThemeSelector />
		<LanguagePicker />
	</section>
</header>

<style>
	header {
		align-items: center;
		background-color: var(--header-bg-color);
		box-shadow: var(--header-box-shadow);
		color: var(--h-text-color);
		display: flex;
		height: var(--header-height);
		justify-content: space-between;
		padding: 0 1rem;
		position: fixed;
		width: 100%;
		z-index: 5;
		@media (width >= 768px) {
      padding: 0 3rem;
    }
	}
	section {
		display: flex;
    align-items: center;
		&:first-child {
			justify-content: flex-start;
		}
		&:last-child {
			justify-content: flex-end;
		}
	}
</style>