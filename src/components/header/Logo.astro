---
import { getLangFromUrl } from '@i18n/utils'
const currentLang = getLangFromUrl(Astro.url);
---

<div class="header__logo-container">
	<a class="header__logo-icon" href={currentLang === 'es' ? '/' : `/${currentLang}`}>
		<img src="/assets/images/logo2.png" alt="logo"/>
	</a>
	<span class="header__logo-text">Sara Joseph</span>
</div>

<style>
	.header__logo-container {
		align-items: center;
		display: inline-flex;
		gap: 1rem;
	}
	.header__logo-icon {
		display: flex;
		&:hover {
			opacity: 0.9;
		}
		img {
			aspect-ratio: 50/49;
			height: 3.5rem;
			width: 3.5rem;
			border: 5px solid var(--purple-primary);
			border-radius: 100%;
		}
	}
	.header__logo-text {
		display: none;
		font-size: 1.4rem;
		font-weight: 700;
		text-transform: uppercase;
		@media (width >= 425px) {
			display: block;
		}
	}
</style>