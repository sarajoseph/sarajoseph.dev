---
import { languages } from '@i18n/ui'
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import { getI18N } from '@i18n/index';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
const dataCV = getI18N({ currentLang });
const { education } = dataCV
---

<section>
  <h3><i class="ti ti-books"></i> {t('education.title')}</h3>
  <div class="articles-container">
  {
    education.map(
      ({ course, degree, institution, location, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear()
        const startMonth = new Date(startDate).getMonth()+1
        const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actual'
        const endMonth = new Date(endDate).getMonth()+1

        return (
          <article>
            <div>
              <time
                datetime={startDate}
                data-title={startDate}>
                  {languages[currentLang]['months'][startMonth]['abr']} {startYear}
              </time>
              {" - "}
              <time
                datetime={endDate}
                data-title={endDate}>
                  {languages[currentLang]['months'][endMonth]['abr']} {endYear}
              </time>
            </div>
            <h4>{degree}</h4>
            <h5>{course}</h5>
            <p>{institution}</p>
            <p>{location}</p>
          </article>
        )
      }
    )
  }
  </div>
</section>

<style>
  section {
    @media (width >= 768px) {
			flex-basis: 50%;
    }
		@media (width >= 1280px) {
      flex-basis: 35%;
		}
  }
</style>